{
  "compilerOptions": {
    "baseUrl": "./offchain",
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": ["offchain/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
